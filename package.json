{
    "name": "automate",
    "version": "0.0.9",
    "publisher": "maxdanify",
    "engines": {
        "vscode": "^1.42.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "displayName": "ESR Automate",
    "description": "Extension for ESR Automate Textual Language",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "ESR Labs",
        "Automate",
        "AUTOSAR",
        "ARXML"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "atm",
                "aliases": [
                    "Automate",
                    "atm"
                ],
                "extensions": [
                    ".atm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "atm",
                "scopeName": "source.automate",
                "path": "./syntaxes/atm.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Automate",
            "properties": {
                "automate.useRTextServer": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Automate RText service."
                }
            }
        }
    },
    "activationEvents": [
        "workspaceContains:**/*.atm"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "lint": "eslint src --ext ts",
        "watch": "tsc --watch -b",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.1",
        "server": "file:./src/server"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^13.7.7",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.21.0",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.0",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mdanilov/automate-vscode-extension"
    }
}
