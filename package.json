{
    "name": "automate",
    "displayName": "automate",
    "description": "Extension for ESR Automate Textual Language",
    "version": "0.0.2",
    "publisher": "maxdanify",
    "engines": {
        "vscode": "^1.42.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mdanilov/automate-vscode-extension"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "languages": [
            {
                "id": "atm",
                "aliases": [
                    "Automate",
                    "atm"
                ],
                "extensions": [
                    ".atm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "atm",
                "scopeName": "source.automate",
                "path": "./syntaxes/atm.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onCommand:extension.helloWorld",
        "workspaceContains:**/*.atm"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.18.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
